<div class="dl-group">
  <%= render(donation.scheduled_pickup) %>
</div>

<div class="dl-group">
  <%= render_donation_status(donation) do %>
    <%= link_to edit_donation_path(donation), class: "edit-donation" do %>
      <%= t("donations.donation.edit") %>
    <% end %>
  <% end %>
</div>

<% if donation.confirmed? %>
  <div class="dl-group">
    <dl>
      <dt>Donation Size</dt>
      <dd>Large</dd>
    </dl>
  </div>
  <div class="dl-group">
    <dl>
      <dt>Donation Details</dt>
      <dd>Basket of tomatoes and carrots.</dd>
    </dl>
  </div>
<% end %>
